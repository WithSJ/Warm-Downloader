<Home>
    MDTextFieldRect:
        id: video_url
        hint_text: "Youtube Video URL"
        size_hint: (.8, None)
        height: "30dp"
        pos_hint: {"center_x":.5,"center_y":.95}
        
    MDRaisedButton:
        id: warm_btn
        text: "Warm Video"
        pos_hint: {"center_x":.5,"center_y":.9}
        size_hint: (.5, .04)
        on_release: 
            root.get_video_data()
            root.show_video_data()
        on_press:
            video_title.text = "please wait..."
            # root.screen_reload()
    MDBoxLayout:
        id: video_data
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {"center_x":.5,"center_y":.67}
        size_hint: (.9,.35)
        # md_bg_color: app.theme_cls.primary_color
        
        MDCard:
            id: video_img
            size_hint: None, None
            size: "280dp", "180dp"
            pos_hint: {"center_x":.5}
            
        MDLabel:
            id: video_title
            text: "Warm Downloader"
            halign: "center"
    
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {"center_x":.5,"center_y":.4}
        size_hint: (.9,.2)
        # md_bg_color: app.theme_cls.primary_light
    
        ScrollView:
            id: add_list
            MDList:
                id: quality_list

    MDLabel:
        id: select_video
        text: ""
        pos_hint: {"center_y":.27}
        halign: "center"
